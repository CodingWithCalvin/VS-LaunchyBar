# EditorConfig is awesome: https://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{csproj,props,targets,vsixmanifest,vsct}]
indent_size = 2

[*.xaml]
indent_size = 2
